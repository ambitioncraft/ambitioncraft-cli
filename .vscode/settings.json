{
  "files.exclude": {
    "**/dist": true,
    "**/lib": true,
    "**/node_modules": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/lib": true,
    "**/coverage": true
  },
  "typescript.referencesCodeLens.enabled": true,
  "debug.node.autoAttach": "off"
}
