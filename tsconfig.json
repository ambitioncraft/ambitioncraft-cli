    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "allowJs": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}
