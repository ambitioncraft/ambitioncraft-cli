{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "src/**/*",
    "src/config.json"
  ]
}
